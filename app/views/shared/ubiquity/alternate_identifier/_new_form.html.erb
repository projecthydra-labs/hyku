<% template = f.object.model.class.to_s.underscore %>

<div class="ubiquity-meta-alternate-identifier" >
  <label class="control-label multi_value optional" for="<% template %>_alternate_identifier">Alternate identifier</label>
  <p class="help-block">May be used for local identifiers such as project codes, e.g. XTE12.</p>
  <p class="help-block">Please include a prefix e.g. 'Project ID = XTE12' so a reader can distinguish between multiple identifiers</p>

  <%= text_field_tag "#{template}[alternate_identifier_group][][alternate_identifier]", nil,
                     class: "#{template}_alternate_identifier_group form-control multi-text-field multi_value",
                     placeholder: 'Add alternate identifier',
                     name: "#{template}[alternate_identifier_group][][alternate_identifier]"
  %>

  <br>
  <label class="control-label multi_value optional" for="<% template %>_alternate_identifier_type">
    Type of alternate identifier</label>
  <p class="help-block">State the type of alternate identifier.</p>

  <%= text_field_tag "#{template}[alternate_identifier_group][][alternate_identifier_type]", nil,
                     class: "#{template}_alternate_identifier_type_group form-control multi-text-field multi_value",
                     placeholder: 'Add alternate identifier type',
                     name: "#{template}[alternate_identifier_group][][alternate_identifier_type]"
  %>
  <br>

  <a href="#" style="color:red;" class="remove_alternate_identifier form-group" data-removeUbiquityAlternateIdentifier=".ubiquity-meta-alternate-identifier">
    <span class="glyphicon glyphicon-remove"></span>
    <span class="controls-remove-text">Remove</span>
  </a>
  |

  <a href="#" class="add_alternate_identifier" data-addUbiquityAlternateIdentifier=".ubiquity-meta-alternate-identifier">Add
    another </a>
  <br> <br>

</div>